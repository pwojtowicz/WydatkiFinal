<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Invoke_LL_Padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="vertical" >

    <Switch
        android:id="@+id/invoke_action_switch"
        style="@style/Style_TextWithShadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:checked="false"
        android:text="Switch"
        android:textOff="@string/switch_no"
        android:textOn="@string/switch_yes"
        android:thumb="@drawable/switch_inner_holo_dark" />

</LinearLayout>